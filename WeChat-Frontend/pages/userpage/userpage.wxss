/**index.wxss**/

.user_page {
  height: 100%;
  align-content: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0rpx 0;
  box-sizing: border-box;
}

.page_head{
  height: 240rpx;
  width: 100%;
  background-color: #8E2782;
  margin-bottom: 25%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  text-align: center;
  width: 100%;
  /* height: 100%; */
  position:absolute;
  top:162rpx;
  z-index:1;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  margin-left: auto;
  margin-right: auto;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #606060;
  text-align: center;
}

.getUserInfo{
  font-size: 30rpx;
  background-color: transparent;
  outline:none !important;
  width:110%;
  left: -5%;
}

.list_item{
  display: flex;
  vertical-align: middle;
  margin-top: 5%;
  margin-left: 5%;
  margin-right: 5%;
  width:90%;
  height: 80rpx;
  /* background-color: #000; */
  border-bottom: 2rpx solid #8E2782;
}

.item_Icon{
  margin-left: 5%;
  margin-right: 4%;
  object-fit: cover;
  height: 40rpx;
  width: 40rpx;
  vertical-align: middle;
 /* border: 1rpx solid; */

}

.item_name{
 /* border: 1rpx solid; */
 vertical-align: middle;
 width: 70%;
 font-size: 30rpx;
}

.news_button{
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
  z-index: 1;
  width:100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  box-shadow: 0px 4px 8px #A7A7A7;
  background: #8E2782 !important;
}

.news_button_img {
  position: fixed;
  bottom: 70rpx;
  right: 70rpx;
  z-index: 1;
  width:55rpx;
  height: 55rpx;
}
