.message_content{
  margin-left:7%;
  margin-right:7%;
  margin-top:6%;
  font-size: 28rpx;
  color: #606060;
}

.msg_view_buttons{
  display: flex;
  flex-direction: row;
  margin-top: 10%;
  margin-left: 70%;
}

.msg_view_button{
  font-size: 27rpx;
  color: #8E2782;
  font-weight: bold;
  margin-right: 15%;
}

.masklayer{
  position: fixed;
  top: 0%;
  left:0%;
  width: 100%;
  height: 100%;
  z-index: 1;
  background-color:#606060;
  opacity: 0.5;
}




