/* pages/orderinfo/orderinfo.wxss */

.order_page {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0rpx 0;
  box-sizing: border-box;
  width: 100%;
} 

.order_title {
  display: flex;
  flex-direction: row;
  border: 3rpx solid;
  border-radius: 40rpx;
  border-color: #AAAAAA;
  text-align: center;
  margin-left:1.5%;
  margin-right: 1.5%;
  width: 97%;
  height: 10%;
}

.page_name{
  text-align: center;
  width: 100%;
  font-size: 28rpx;
  color: #8E2782;
  /* font-weight: bold; */
  margin:2%;
}
.empty_item{
  width:8%;
}

.icon{
  margin-top: 3%;
  margin-left: 2%;
  object-fit: cover;
  width: 5%;
  height: 5%;
}

.order_info{
  height: 1160rpx;
  width: 84%;
  border:1rpx solid #AAAAAA;
  margin-left: 8%;
  margin-right: 8%;
  margin-top: 5%;
  border-radius: 15rpx;
  box-shadow:0rpx -1rpx 3rpx 0rpx #AAAAAA inset;
  /* -moz-box-shadow:2px 2px 10px #333333; -webkit-box-shadow:2px 2px 10px #333333; box-shadow:2px 2px 10px #333333; */
}

.info_block1{
  /* position: absolute; */
  display: flex;
  flex-direction: row;
  height:23%;
  width: 100%;
  background-color: #940085;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  
  color: white;
}

.left_1{
  margin-left: 10%;
  height: 100%;
  width:60%;
  
}

.info_piano_type{
  margin-top: 15%;
  font-size: 48rpx;
  font-weight: bolder;
}

.info_room_num{
  margin-top: 12%;
  font-weight: bold;
  font-size: 33rpx;
}

.right_1{
  margin-top: 2%;
  margin-left: 20%;
  height: 100%;
  width:30%;
  text-align: left;
}

.info_order_status{
  margin-top: 28%;
  font-size: 35rpx;
  font-weight: bolder;
}

.info_order_price{
  margin-top: 19%;
  font-size: 40rpx;
  font-weight: bold;
}

.info_block2{
  height: 30%;
  border-bottom: 1rpx solid #AAAAAA;
}

.qrcode{
  margin-top: 4%;
  margin-left: 30%;
  object-fit:cover;
  width: 40%
}

.info_order_id{
  margin-top:8%;
  margin-left: 5%;
  font-size: 31rpx;
  display: flex;
  flex-direction: row;
}



.info_order_date{
  margin-top:8%;
  margin-left: 5%;
  font-size: 31rpx;
  display: flex;
  flex-direction: row;  
}

.info_date_input{
  
  border:1rpx solid #AAAAAA;
  border-radius: 15rpx;
  width: 40%;
  /* text-align: center; */
}

.info_date_text{
  width: 40%;
  /* text-align: center; */
}

.info_order_user{
  margin-top:8%;
  margin-left: 5%;
  font-size: 31rpx;
}

.info_order_time{
  display: flex;
  flex-direction: row;
  margin-top:8%;
  margin-left: 5%;
  font-size: 31rpx;
}

.info_order_op{
  margin-left: 5%;
  margin-top: 8%;
  display: flex;
  flex-direction: row;
  font-size: 27rpx;
  color: #8E2782;
  font-weight: bold;
}

.info_pay{
  margin-left: 4%;
}
.info_edit{
  margin-left: 4%;
}

#unreachable{
  color: #AAAAAA;
  font-weight: normal;
}

.start_picker{
  border: 1rpx solid #AAAAAA;
  width: 25%;
  border-radius: 15rpx;
  color: #AAAAAA;
  text-align: center;
}

.end_picker{
  border: 1rpx solid #AAAAAA;
  width: 25%;
  border-radius: 15rpx;
  color: #AAAAAA;
  text-align: center;
}

.info_order_time_text{
  width: 25%;
  text-align: center;
}


.masklayer{
  position: fixed;
  top: 0%;
  left:0%;
  width: 100%;
  height: 100%;
  z-index: 1;
  background-color:#606060;
  opacity: 0.5;
}




.close_icon{
  margin-top: 5rpx;
  margin-left: 80rpx;
  margin-right: 80rpx;
  object-fit: cover;
  height: 30rpx;
  width: 30rpx;
  position: fixed;
  left: 80%;
  top:5%;
}


.cancel_view{
  height: 25%;
  width: 70%;
  position: fixed;
  top:35%;
  left: 15%;
  z-index: 1;
  background-color: white;
  border-radius: 10rpx;
  box-shadow:0px 0px 8px #C7C7C7;
}

.cancel_title{
  margin-left:7%;
  margin-top:7%;
  font-weight: bold;
  font-size: 35rpx;
