}

.cancel_view_buttons{
  display: flex;
  flex-direction: row;
  margin-top: 10%;
  margin-left: 70%;
}

.cancel_view_button{
  font-size: 27rpx;
  color: #8E2782;
  font-weight: bold;
  margin-right: 15%;
