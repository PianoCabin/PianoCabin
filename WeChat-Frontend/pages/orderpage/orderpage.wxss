/**index.wxss**/
@import "order_item.wxss"

.order_page {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0rpx 0;
  box-sizing: border-box;
  width: 100%;
} 

.order_title {
  display: flex;
  flex-direction: row;
  border: 3rpx solid;
  border-radius: 40rpx;
  border-color: #AAAAAA;
  text-align: center;
  margin-left: 5%;
  margin-right: 5%;
  width: 90%;
  height: 10%;
}

.order_type{
  margin-top: 3%;
  text-align: center;
  color: #8E2782;
  box-sizing: content-boxs;
  padding-bottom: 6rpx;
  padding-left: 4rpx;
  padding-right: 4rpx;
}

.select_type {
  margin-top: 3%;
  text-align: center;
  color: #8E2782;
  box-sizing: content-boxs;
  border-bottom: 5rpx solid;
  padding-bottom: 6rpx;
  padding-left: 4rpx;
  padding-right: 4rpx;
}


.empty_item{
  width:10%;
}


.edge_item{
  width: 40rpx;
}
.type_item {
  text-align: center;
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 8rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
}



.icon{
  margin-top: 2.5%;
  margin-left: 2%;
  object-fit: cover;
  width: 20%;
  height: 20%;
}




.masklayer{
  position: fixed;
  top: 0%;
  left:0%;
  width: 100%;
  height: 100%;
  z-index: 1;
  background-color:#606060;
  opacity: 0.5;
}




.close_icon{
  margin-top: 5rpx;
  margin-left: 80rpx;
  margin-right: 80rpx;
  object-fit: cover;
  height: 30rpx;
  width: 30rpx;
  position: fixed;
  left: 80%;
  top:5%;
}


.order_icon{
  margin-top: 15%;
  margin-left: 5%;
  margin-right: 5%;
  object-fit:cover;
  height: 20%;
  width: 10%;
}


.edit_view{
  height: 38%;
  width: 78%;
  position: fixed;
  top:15%;
  left: 11.2%;
  z-index: 1;
  background-color: white;
  border-radius: 20rpx;
}

.edit_title{
  background-color: #8E2782;
  color: white;
  text-align: center;
  vertical-align: middle;
  width:100%;
  height: 30%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 48rpx;
}


.list_empty{
  position:fixed;
  top:40%;
  width: 100%;
  text-align: center;
}