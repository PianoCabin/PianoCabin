/**index.wxss**/
@import "room_item.wxss";

.handle_masklayer{
  height: 100%;
  position: fixed;
  top: 0%;
  left: 0%;
  width: 100%;
  background-color: transparent;
}

.list_page {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0rpx 0;
  box-sizing: border-box;
} 
           
.page-section{
  margin-bottom: 20rpx;
}
.room_type {
  display: flex;
  flex-direction: row;
  border: 3rpx solid;
  border-radius: 40rpx;
  border-color: #AAAAAA;
  margin-left: 5%;
  margin-right: 5%;
}
.empty_item{
  width: 20%;
}
.edge_item{
  width: 40rpx;
}
.type_item {
  text-align: center;
  width: 100%;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
}
.select_type {
  color: #8E2782;
  box-sizing: content-boxs;
  border-bottom: 5rpx solid;
}

.date-set{
  display: flex;
  flex-direction: row;
  text-align: center;
  margin-top: 3%;
  font-size: 25rpx;
}
.icon{
  margin-top: 5rpx;
  margin-left: 80rpx;
  margin-right: 80rpx;
  object-fit: cover;
  height: 30rpx;
  width: 30rpx;
}

.room_list{
  margin-left: 10%;
  margin-right: 10%;
}

.search_button{
  position: fixed;
  top: 85%;
  left: 80%;
  z-index: 1;
  width:100rpx;
  height: 100rpx; 
  object-fit: cover;
}

.order_info{
  z-index: 2;
  position: fixed;
  top: 40%;
  width:99%;
  height: 60%;
  background-color: white;
  border: 1rpx solid #AAAAAA;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.masklayer{
  position: fixed;
  top: 0%;
  left:0%;
  width: 100%;
  height: 100%;
  z-index: 3;
  background-color:#606060;
  opacity: 0.5;
}

.order_name{
  margin-top: 10%;
  margin-left: 15%;
  height: 15%;
  width: 70%;
  text-align: center;
  font-size: 50rpx;
  border-bottom: 5rpx solid #8E2782;
}

.order_room_num{
  margin-top: 5%;
  margin-left: 15%;
  width: 70%;
  font-size: 40rpx;
}

.order_date{
  margin-top: 5%;  
  margin-left: 15%;
  width: 70%;
  font-size: 40rpx;
}

.order_time{
  display: flex;
  margin-top: 5%;  
  margin-left: 15%;
  width: 70%;
  font-size: 40rpx;
}

.order_price{
  margin-top: 5%;  
  margin-left: 15%;
  width: 70%;
  font-size: 40rpx;
}
.order_complete{
  position: fixed;
  bottom: 0%;
  width: 100%;
  background-color: #8E2782;
  color: white;
}

.grey{
  color:#AAAAAA;
}

.purple{
  color:#8E2782;
}

.time_picker{
  border-radius: 10rpx;
  border: 1rpx solid #AAAAAA;
  width:30%;
  font-size: 35rpx;
  text-align: center;
  color : #AAAAAA;
}


.search_page{
  z-index: 2;
  position: fixed;
  top: 40%;
  width:99%;
  height: 60%;
  background-color: white;
  border: 1rpx solid #AAAAAA;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.search_brand_input{
  margin-top:10%;
  margin-left: 15%;
  display: flex;
  flex-direction: row;
  text-align: center;
}

.text_input{
  border: 1rpx solid #AAAAAA;
  width: 58%;
  border-radius: 20rpx;
}

.search_time_setter{
  margin-top: 15%;
  display: flex;
  margin-left: 15%;
  flex-direction: row;
  margin-right: 10%; 
}

.search_time_picker{
  text-align: center;
  background-color: white;
  border-radius: 20rpx;
  border:2rpx solid #AAAAAA;
  width: 30%;
  color: #AAAAAA;
}

.search_title{
  margin-top: 10%;
  margin-left: 15%;
  height: 15%;
  width: 70%;
  text-align: center;
  font-size: 50rpx;
  border-bottom: 5rpx solid #8E2782;
}

.search_push{
  position: fixed;
  bottom: 0%;
  width: 100%;
  background-color: #8E2782;
  color: white;
}

.close_icon{
  margin-top: 5rpx;
  margin-left: 80rpx;
  margin-right: 80rpx;
  object-fit: cover;
  height: 30rpx;
  width: 30rpx;
  position: fixed;
  left: 80%;
  top:5%;
}