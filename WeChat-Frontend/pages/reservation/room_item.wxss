  width: 100%; 
  font-size:18rpx;
  text-align: center;
  justify-content: center;
  display: flex;
  flex-direction: row;
}

.end_item{
  /* border-top:1rpx solid;
  border-left:1rpx solid;
  border-right:1rpx solid;
  border-color:#AAAAAA; */
  font-size:18rpx;
  text-align: center;
  justify-content: center;
  display: flex;
  flex-direction: row;
}

.time_label{
  object-fit: cover;
  height: 7rpx;
  width: 5rpx;
}
.hour_text{
  margin-top: 4rpx;
  position: absolute;
  top: 0%;
  color: white;
}