.info{
  width:100%;
}

.room_item{
  display: flex;
  flex-direction: row;
  height: 180rpx;
  width: 100%;
  margin-top: 5%;
  border:3rpx solid;
  border-radius: 15rpx;
  border-color: #BBBBBB;
  box-shadow:0rpx -1rpx 2rpx 0rpx #AAAAAA inset;
}

.room_icon{
  margin-top: 10%;
  margin-left: 3%;
  margin-right: 3%;
  object-fit:cover;
  height: 28%;
  width: 10%;
  
}

.room_info{
  display:flex;
  margin-top:5%;
}

.room_name{
  width:70%;
  font-size:35rpx;
}

.room_info1{
  text-align:right;
  width:30%;
  font-size:25rpx;
  margin-right:10%;
}

.room_info2{
  color:#AAAAAA;
}

.time_bar{
  margin-top: 5%;
  display:flex;
}

.bar_item{
  height:10rpx;
}

.time_scaler{
  display:flex;
  position: relative;
  flex-direction: row;
  margin-top:0.75%;
  margin-bottom: 0.75%;
  width: 95%;
}

.scaler_item{
  /* border-top:1rpx solid;
